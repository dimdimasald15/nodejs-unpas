<div class="row my-3">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-body">
        <h5 class="card-title">Form Tambah Data Contact</h5>
        <% if(typeof errors != 'undefined'){ %>
        <div class="alert alert-danger" role="alert">
          <p class="fw-bold">Terjadi Kesalahan!</p>
          <ul>
            <% errors.forEach((err, i)=>{ %>
            <li><%= err.msg %></li>
            <% }) %>
          </ul>
        </div>
        <% } %>
        <form action="/contact" method="POST">
          <div class="mb-3">
            <label for="nama" class="form-label">Nama Kontak</label>
            <input
              type="text"
              class="form-control"
              id="nama"
              name="nama"
              placeholder="lebah ganteng"
              required
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="name@example.com"
              required
            />
          </div>
          <div class="mb-3">
            <label for="nohp" class="form-label">No Handphone</label>
            <input
              type="text"
              class="form-control"
              id="nohp"
              name="nohp"
              placeholder="08xxxxxxxxx"
              required
            />
          </div>
          <div class="mb-3">
            <button class="btn btn-success" type="submit">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
